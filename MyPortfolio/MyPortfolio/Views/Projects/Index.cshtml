            <img  height="100" width="80" data-toggle="modal" data-target="#myModal" data-dismiss="modal" src="~/Content/MyPics/TextDollarPart4.JPG" alt="Text dollar code part four." />
            <img  height="100" width="80" data-toggle="modal" data-target="#myModal" data-dismiss="modal" src="~/Content/MyPics/TextDollarPart5.JPG" alt="Text dollar code part five." />
            <img  height="100" width="80" data-toggle="modal" data-target="#myModal" data-dismiss="modal" src="~/Content/MyPics/TextDollarPart6.JPG" alt="Text dollar code part six." />
            <img  height="100" width="80" data-toggle="modal" data-target="#myModal" data-dismiss="modal" src="~/Content/MyPics/TextDollarPart7.JPG" alt="Text dollar code part seven." />
